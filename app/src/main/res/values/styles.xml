<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/camHfilm</item>
        <item name="colorPrimary">@color/camHfilm</item>
        <item name="colorPrimaryVariant">@color/camHfilm</item>
        <item name="colorOnPrimary">@color/trang</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/camHfilm</item>
        <item name="colorPrimary">@color/camHfilm</item>
        <item name="colorPrimaryVariant">@color/camHfilm</item>
        <item name="colorOnPrimary">@color/trang</item>
